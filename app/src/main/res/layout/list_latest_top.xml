<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_latest_top"
        android:layout_width="344dp"
        android:layout_height="262dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/img_latest_top"
                android:layout_width="344dp"
                android:layout_height="176dp"
                android:src="@drawable/logo_lg" />

            <TextView
                android:id="@+id/tv_latest_top"
                android:layout_width="324dp"
                android:layout_height="40dp"
                android:layout_below="@+id/img_latest_top"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="32dp"
                android:text="Japanese Station"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_latest_kategori_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_latest_top"
                android:layout_marginLeft="10dp"
                android:letterSpacing="-0.05"
                android:textColor="#9b9b9b"
                android:textSize="12sp"
                android:text="Lifestyle" />

            <TextView
                android:id="@+id/txt_latest_date_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_latest_top"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@id/txt_latest_kategori_top"
                android:gravity="end"
                android:letterSpacing="-0.05"
                android:textColor="#9b9b9b"
                android:textSize="12sp"
                android:text="2 Weeks Ago" />

            <ImageView
                android:id="@+id/img_latest_bookmark_top"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/img_latest_top"
                android:layout_marginRight="11dp"
                android:layout_marginTop="57dp"
                android:src="@drawable/bookmark"
                android:layout_marginBottom="11dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>