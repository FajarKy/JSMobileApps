<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc400"
    tools:context="com.fajarzky.jsmobileapps.signup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/lg_login"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo_lg" />

        <TextView
            android:id="@+id/txt_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lg_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="SIGN UP"
            android:textColor="#131418"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/edt_emailsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_signup"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:hint="E-mail" />

        <EditText
            android:id="@+id/edt_usersignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_emailsignup"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:hint="Username" />

        <EditText
            android:id="@+id/edt_passsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_usersignup"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:hint="Password" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_passsignup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_center"
            android:text="Sign Up"
            android:textColor="#ff3300"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_signupwith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Sign Up With :" />

        <LinearLayout
            android:id="@+id/ly_notaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ly_signup"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_backto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fab_margin"
                android:text="Back To :" />

            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_center"
                android:text="Log In"
                android:textColor="#ff3300" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_signupwith"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <Button
                android:id="@+id/btn_logintw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/left"
                android:drawableRight="@drawable/ctw"
                android:text="Twitter" />

            <Button
                android:id="@+id/btn_loginfb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/right"
                android:drawableLeft="@drawable/cfb"
                android:text="Faceboook" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
