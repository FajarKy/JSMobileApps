<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fajarzky.jsmobileapps.Developer">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/js"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:src="@drawable/logo_lg" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignTop="@+id/js"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="150dp"
            android:background="#ffc400">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtabout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="DEVELOPERS"
                    android:textColor="#000"
                    android:textSize="35dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgnuary"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/txtabout"
                    android:layout_margin="7dp"
                    android:src="@drawable/nuary" />

                <TextView
                    android:id="@+id/txtnuary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtabout"
                    android:layout_marginTop="37dp"
                    android:layout_toRightOf="@+id/imgnuary"
                    android:text="Nuary Pradipta"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtnuary"
                    android:layout_toRightOf="@+id/imgnuary"
                    android:text="Mentor"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <!--fajar-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgfajar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignEnd="@+id/txtabout"
                    android:layout_alignRight="@+id/txtabout"
                    android:layout_below="@+id/imgnuary"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/gww" />

                <TextView
                    android:id="@+id/txtfajar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imgnuary"
                    android:layout_alignStart="@+id/imgnuary"
                    android:layout_alignTop="@+id/imgfajar"
                    android:layout_marginTop="37dp"
                    android:text="Fajar Rizky Wicaksono"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtfajar"
                    android:layout_alignStart="@+id/txtfajar"
                    android:layout_below="@+id/txtfajar"
                    android:text="Designer"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <!--ghilam-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgghulam"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:layout_below="@+id/imgfajar"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/gulam" />

                <TextView
                    android:id="@+id/txtghulam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imgghulam"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/imgnuary"
                    android:layout_toRightOf="@+id/imgnuary"
                    android:text="Hafiizh Ghulam Fatkha"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtghulam"
                    android:layout_alignStart="@+id/txtghulam"
                    android:layout_below="@+id/txtghulam"
                    android:text="Programmer"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>
